@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="">Power BI Data Export</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <AuthorizeView>
                        <Authorized>
                            <li class="nav-item">
                                <span class="nav-link">@context.User.Identity?.Name</span>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link btn btn-link" @onclick="BeginSignOut">Sign Out</button>
                            </li>
                        </Authorized>
                        <NotAuthorized>
                            <li class="nav-item">
                                <a class="nav-link" href="authentication/login">Sign In</a>
                            </li>
                        </NotAuthorized>
                    </AuthorizeView>
                </ul>
            </div>
        </div>
    </nav>

    <main>
        <div class="container">
            @Body
        </div>
    </main>

    <footer class="footer border-top py-3 mt-5">
        <div class="container text-center">
            <span class="text-muted">Â© @DateTime.Now.Year - Power BI Data Export Tool</span>
        </div>
    </footer>
</div>

@code {
    private async Task BeginSignOut()
    {
        Navigation.NavigateToLogout("authentication/logout");
    }
}
